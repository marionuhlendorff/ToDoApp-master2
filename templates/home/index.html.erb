	<div class="row">


		<% if user %>
		<p><%= user.email %></p>
		<div class="row">
			<div class="col-lg-12">
				<form action="sessions/delete" method="POST"> 
					<input type="submit" value="sign out" class="button"/>
				</form>
			</div>
			<%else%>

			<div class="col-lg-4">
			</div>
			<div class="col-lg-4">
			</div>
			<%end%>
		</div>


		<div class="row">
			<div class="col-lg-12">

				<h1>ToDoApp</h1>
				<h2>
					Hier ist die erste Seite von der ToDoApp!
				</h2>
			</div>
		</div>

		<% if user %>
		<div class="row">
			<div class="col-lg-12">
				<form action="tasks/create" method='POST'>
					<p>Deine Aufgabe:</p>
					<input type="text" name="task" autofocus="true"/>
					<! -- damit das eingabefeld aktiv bleibt -->
					<input type="submit" value="bestaetigen" />
				</form>
			</div>
		</div>


		<div class="row">
			<div class="col-lg-12">
				<form METHOD="GET" action="/">
					<button name="alphabetically">Alphabetisch</button>
					<button name="newest">Neuste zuerst</button>
				</form>
			</div>
		</div>

		<button class="header-nav-link sign-out-button tooltipped tooltipped-s" aria-label="Sign out" data-ga-click="Header, sign out, icon:logout">
			<span class="octicon octicon-sign-out"></span>
		</button>
		<ul>
			<% tasks.each do |task| %>
			<li>
				<form action="/tasks/delete" METHOD="POST">
					<%= h(task.name) %>
					<input type ='hidden' value="<%= task.id%>" name="task_id">
					<! -- hidden! sendet versteckte Daten -->
					<button>Loeschen sie bitte hier</button>
				</form>
			</li>
			<% end %>
		</ul>

		<% end %>





